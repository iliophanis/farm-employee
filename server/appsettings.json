{
 "Serilog": {
  "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
  "MinimumLevel": {
   "Default": "Warning",
   "Override": {
    "Microsoft": "Error"
   }
  },
  "WriteTo": [
   {
    "Name": "Console",
    "Args": {
     "outputTemplate": "[{Timestamp:u}] [{Level:u}] {Message:lj}{NewLine}{Exception}"
    }
   },
   {
    "Name": "File",
    "Args": {
     "path": "Logs/log.txt",
     "rollingInterval": "Day",
     "outputTemplate": "[{Timestamp:u}] [{Level:u}] {Message:lj}{NewLine}{Exception}"
    }
   }
  ],
  "Enrich": ["FromLogContext", "WithExceptionDetails"]
 },
